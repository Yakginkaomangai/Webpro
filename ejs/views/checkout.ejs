            height: 50px;
            border-radius: 8px;
            margin-right: 10px;
        }

        .order-item .order-details {
            flex-grow: 1;
        }

        .order-item .order-actions {
            display: flex;
            align-items: center;
        }

        .order-item .order-actions button {
            background-color: #2E8B57;
            color: white;
            border: none;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: flex;
            justify-content: center;

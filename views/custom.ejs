<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Custom Sandwich</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            padding-left: 50px;
        }
        /* ปรับระยะห่างของเมนูใต้ Navbar */
        .menu-container {
            margin-top: 80px; /* เพิ่มระยะห่างจาก Navbar */
        }

        /* ปรับขนาด topping box */
        .topping-item {
            display: flex;
            align-items: center;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 12px;
            margin-bottom: 15px;
            background-color: white;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1); /* เพิ่มเงา */
            transition: all 0.3s ease-in-out;
        }
        .topping-item:hover {
            transform: scale(1.02); /* ขยายเล็กน้อยเมื่อ hover */
            box-shadow: 3px 3px 12px rgba(0, 0, 0, 0.2);
        }
        .topping-item img {
            width: 90px;
            height: 90px;
            border-radius: 8px;
            margin-right: 15px;
        }
        .topping-item .details {
            flex-grow: 1;
        }
        .topping-item .quantity-controls {
            display: flex;
            align-items: center;
        }
    
        /* ปรับปุ่ม + และ - */
        .quantity-controls .btn {
            width: 35px;
            height: 35px;
            font-size: 20px;
            border-color: #ddd;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .quantity-controls .btn:hover {
            background-color: #2E8B57; /* สีเขียว */
            color: white;
            border-color: #2E8B57;
        }
        .quantity-controls span {
            font-size: 18px;
            font-weight: bold;
            width: 30px;
            text-align: center;
        }
    
        /* ปรับ UI ของหมวดหมู่ (Meat, Vegetables, Sauces) */
        .category-box {
            background-color: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.08);
            margin-bottom: 25px;
        }
        .category-box h4 {
            font-size: 22px;
            font-weight: bold;
            color: #333;
            margin-bottom: 15px;
        }

        
    
        /* ปรับ UI ตะกร้าสินค้า */
        .cart-box {
            background-color: #f8f9fa; /* เปลี่ยนเป็นสีเทาอ่อนคล้ายรูปตัวอย่าง */
            padding: 15px;
            border-radius: 12px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            position: sticky;
            top: 20px;
            max-width: 400px;
            width: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 500px;
        }

        .cart-header {
            font-size: 18px;
            font-weight: bold;
            text-align: center;
            padding-bottom: 10px;
            border-bottom: 1px solid #ddd;
        }

    
        /* ปุ่มยืนยันการสั่งซื้อ */
        #confirmOrder {
            width: 100%;
            font-size: 18px;
            font-weight: bold;
            padding: 12px;
            border-radius: 8px;
        }
        #confirmOrder:hover {
            background-color: #1E7E34;
        }

         /* Responsive */
        @media (max-width: 768px) {
            .cart-box {
                max-width: 100%;
                position: relative;
                margin-top: 20px;
            }

            .cart-items-container {
                max-height: 300px;
            }
            .menu-container {
                margin-top: 25px;
            }
        }
    </style>
    
</head>
<body id="custom-page">
    
    <%- include('partials/navbar') %>

        <div class="row mt-5 mb-5">
            <div class="col-lg-8">
                <h2>Custom Sandwich</h2>
                <img src="/img/promote.png" alt="Custom Sandwich" class="img-fluid rounded">
            </div>
        </div>

        <div class="row mt-5">
            <h3>Add topping</h3>
            <div class="col-lg-8 mt-3">
                <!-- Bread Category -->
                <div class="category-box">
                    <h4 class="mb-3">Bread</h4>
                    <div class="row">
                        <% breads.forEach(breads => { %>
                        <div class="col-md-6 mb-3">
                            <div class="topping-item">
                                <img src="<%= breads.img %>">
                                <div class="details">
                                    <h5 class="mb-1"><%= breads.name %></h5>
                                    <p class="text-success fw-bold"><%= breads.price %> บาท</p>
                                </div>
                                <label class="checkbox-container">
                                    <input type="checkbox" class="topping-checkbox" data-name="<%= breads.name %>" data-price="<%= breads.price %>">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>

                <!-- Meat Category -->
                <div class="category-box">
                    <h4 class="mb-3">Meat</h4>
                    <div class="row">
                        <% meats.forEach(meats => { %>
                        <div class="col-md-6 mb-3">
                            <div class="topping-item">
                                <img src="<%= meats.img %>">
                                <div class="details">
                                    <h5 class="mb-1"><%= meats.name %></h5>
                                    <p class="text-success fw-bold"><%= meats.price %> บาท</p>
                                </div>
                                <label class="checkbox-container">
                                    <input type="checkbox" class="topping-checkbox" data-name="<%= meats.name %>" data-price="<%= meats.price %>">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>

                <!-- Vegetables Category -->
                <div class="category-box mt-4">
                    <h4 class="mb-3">Vegetables</h4>
                    <div class="row">
                        <% vegetables.forEach(vegetables => { %>
                        <div class="col-md-6 mb-3">
                            <div class="topping-item">
                                <img src="<%= vegetables.img %>">
                                <div class="details">
                                    <h5 class="mb-1"><%= vegetables.name %></h5>
                                    <p class="text-success fw-bold"><%= vegetables.price %> บาท</p>
                                </div>
                                <label class="checkbox-container">
                                    <input type="checkbox" class="topping-checkbox" data-name="<%= vegetables.name %>" data-price="<%= vegetables.price %>">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>

                <!-- Sauces Category -->
                <div class="category-box mt-4">
                    <h4 class="mb-3">Sauces</h4>
                    <div class="row">
                        <% sauces.forEach(sauces => { %>
                        <div class="col-md-6 mb-3">
                            <div class="topping-item">
                                <img src="<%= sauces.img %>">
                                <div class="details">
                                    <h5 class="mb-1"><%= sauces.name %></h5>
                                    <p class="text-success fw-bold"><%= sauces.price %> บาท</p>
                                </div>
                                <label class="checkbox-container">
                                    <input type="checkbox" class="topping-checkbox" data-name="<%= sauces.name %>" data-price="<%= sauces.price %>">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <h4>ราคารวม: <span id="total-price">0 บาท</span></h4>
                <button id="addToCart" class="btn btn-primary">เพิ่มลงตะกร้า</button>
            </div>
            
            <%- include('partials/cart') %>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
    let selectedToppings = [];
    let totalPrice = 0;

    // ฟังก์ชันอัปเดตการแสดงผลของตะกร้า
    function updateCartDisplay() {
        const selectedToppingsElement = document.getElementById("selected-toppings");
        if (selectedToppingsElement) {
            selectedToppingsElement.innerHTML = selectedToppings.length ? selectedToppings.join(", ") : "ไม่มีท็อปปิ้งที่เลือก";
        }

        const totalPriceElement = document.getElementById("total-price");
        if (totalPriceElement) {
            totalPriceElement.textContent = totalPrice + " บาท";
        }
    }

    // ตรวจสอบว่าองค์ประกอบมีอยู่ก่อนใช้งาน
    const addToCartButton = document.getElementById("addToCart");
    if (addToCartButton) {
        addToCartButton.addEventListener("click", function () {
            if (selectedToppings.length === 0) {
                alert("กรุณาเลือกท็อปปิ้งอย่างน้อย 1 รายการ");
                return;
            }

            let orderData = {
                name: "Custom Sandwich",
                toppings: selectedToppings,
                total_price: totalPrice
            };
            console.log(orderData); // ตรวจสอบข้อมูลที่ส่งไป

            // ส่งข้อมูลไปยัง API
            fetch("/add-to-cart", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(orderData)
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    alert("เพิ่มลงตะกร้าสำเร็จ!");
                    // อัปเดต DOM เพื่อแสดงข้อมูลในตะกร้า
                    updateCartDisplay();  // อัปเดตตะกร้า
                } else {
                    alert("เกิดข้อผิดพลาด กรุณาลองอีกครั้ง");
                }
            })
            .catch(error => {
                console.error("Error:", error);
                alert("เกิดข้อผิดพลาดในการเพิ่มสินค้า");
            });
        });
    }

    // ดึงข้อมูลท็อปปิ้งจาก API
    fetch('/get-toppings')
    .then(response => response.json())
    .then(data => {
        console.log("📌 Data Loaded:", data);

        // ค้นหาหมวดหมู่จาก HTML
        let categories = {
            meat: document.querySelector(".category-box[data-category='meat'] .row"),
            vegetable: document.querySelector(".category-box[data-category='vegetable'] .row"),
            sauce: document.querySelector(".category-box[data-category='sauce'] .row"),
        };

        // เคลียร์ข้อมูลเดิม
        Object.values(categories).forEach(container => container.innerHTML = "");

        // เติมข้อมูล
        data.forEach(topping => {
            let category = categories[topping.type];
            if (category) {
                let itemHTML = `
                    <div class="col-md-6 mb-3">
                        <div class="topping-item">
                            <img src="${topping.img}" alt="${topping.name}">
                            <div class="details">
                                <h5 class="mb-1">${topping.thname}</h5>  <!-- ชื่อท็อปปิ้งภาษาไทย -->
                                <p class="text-success fw-bold">${topping.price} บาท</p>
                            </div>
                            <label class="checkbox-container">
                                <input type="checkbox" class="topping-checkbox" data-name="${topping.name}" data-price="${topping.price}">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>
                `;
                category.insertAdjacentHTML("beforeend", itemHTML);
            } else {
                console.error(`ไม่พบหมวดหมู่ ${topping.type} สำหรับท็อปปิ้งนี้`);
            }
        });
    })
    .catch(error => {
        console.error("❌ Error fetching toppings:", error);
        alert("เกิดข้อผิดพลาดในการดึงข้อมูลท็อปปิ้ง");
    });

    // ตรวจสอบ checkbox
    const checkboxes = document.querySelectorAll(".topping-checkbox");
    if (checkboxes.length > 0) {
        checkboxes.forEach(checkbox => {
            checkbox.addEventListener("change", function () {
                let name = this.dataset.name;
                let price = parseFloat(this.dataset.price);

                if (this.checked) {
                    selectedToppings.push(name);
                    totalPrice += price;
                } else {
                    selectedToppings = selectedToppings.filter(item => item !== name);
                    totalPrice -= price;
                }
                updateCartDisplay();
            });
        });
    }
});

    </script>
    
    <%- include('partials/footer') %>

</body>
</html>
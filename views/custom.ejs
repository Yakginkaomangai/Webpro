    <script>
        document.addEventListener("DOMContentLoaded", function () {
    let selectedToppings = [];
    let totalPrice = 0;

    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏Å‡∏≤‡∏£‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏•‡∏Ç‡∏≠‡∏á‡∏ï‡∏∞‡∏Å‡∏£‡πâ‡∏≤
    function updateCartDisplay() {
        const selectedToppingsElement = document.getElementById("selected-toppings");
        if (selectedToppingsElement) {
            selectedToppingsElement.innerHTML = selectedToppings.length ? selectedToppings.join(", ") : "‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏ó‡πá‡∏≠‡∏õ‡∏õ‡∏¥‡πâ‡∏á‡∏ó‡∏µ‡πà‡πÄ‡∏•‡∏∑‡∏≠‡∏Å";
        }

        const totalPriceElement = document.getElementById("total-price");
        if (totalPriceElement) {
            totalPriceElement.textContent = totalPrice + " ‡∏ö‡∏≤‡∏ó";
        }
    }

    // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡∏≠‡∏á‡∏Ñ‡πå‡∏õ‡∏£‡∏∞‡∏Å‡∏≠‡∏ö‡∏°‡∏µ‡∏≠‡∏¢‡∏π‡πà‡∏Å‡πà‡∏≠‡∏ô‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô
    const addToCartButton = document.getElementById("addToCart");
    if (addToCartButton) {
        addToCartButton.addEventListener("click", function () {
            if (selectedToppings.length === 0) {
                alert("‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ó‡πá‡∏≠‡∏õ‡∏õ‡∏¥‡πâ‡∏á‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏ô‡πâ‡∏≠‡∏¢ 1 ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£");
                return;
            }

            let orderData = {
                name: "Custom Sandwich",
                toppings: selectedToppings,
                total_price: totalPrice
            };
            console.log(orderData); // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏µ‡πà‡∏™‡πà‡∏á‡πÑ‡∏õ

            // ‡∏™‡πà‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏õ‡∏¢‡∏±‡∏á API
            fetch("/add-to-cart", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(orderData)
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    alert("‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏•‡∏á‡∏ï‡∏∞‡∏Å‡∏£‡πâ‡∏≤‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!");
                    // ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï DOM ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÅ‡∏™‡∏î‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÉ‡∏ô‡∏ï‡∏∞‡∏Å‡∏£‡πâ‡∏≤
                    updateCartDisplay();  // ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏ï‡∏∞‡∏Å‡∏£‡πâ‡∏≤
                } else {
                    alert("‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏•‡∏≠‡∏á‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á");
                }
            })
            .catch(error => {
                console.error("Error:", error);
                alert("‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤");
            });
        });
    }

    // ‡∏î‡∏∂‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡πá‡∏≠‡∏õ‡∏õ‡∏¥‡πâ‡∏á‡∏à‡∏≤‡∏Å API
    fetch('/get-toppings')
    .then(response => response.json())
    .then(data => {
        console.log("üìå Data Loaded:", data);

        // ‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà‡∏à‡∏≤‡∏Å HTML
        let categories = {
            meat: document.querySelector(".category-box[data-category='meat'] .row"),
            vegetable: document.querySelector(".category-box[data-category='vegetable'] .row"),
            sauce: document.querySelector(".category-box[data-category='sauce'] .row"),
        };

        // ‡πÄ‡∏Ñ‡∏•‡∏µ‡∏¢‡∏£‡πå‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÄ‡∏î‡∏¥‡∏°
        Object.values(categories).forEach(container => container.innerHTML = "");

        // ‡πÄ‡∏ï‡∏¥‡∏°‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
        data.forEach(topping => {
            let category = categories[topping.type];
            if (category) {
                let itemHTML = `
                    <div class="col-md-6 mb-3">
                        <div class="topping-item">
                            <img src="${topping.img}" alt="${topping.name}">
                            <div class="details">
                                <h5 class="mb-1">${topping.thname}</h5>  <!-- ‡∏ä‡∏∑‡πà‡∏≠‡∏ó‡πá‡∏≠‡∏õ‡∏õ‡∏¥‡πâ‡∏á‡∏†‡∏≤‡∏©‡∏≤‡πÑ‡∏ó‡∏¢ -->
                                <p class="text-success fw-bold">${topping.price} ‡∏ö‡∏≤‡∏ó</p>
                            </div>
                            <label class="checkbox-container">
                                <input type="checkbox" class="topping-checkbox" data-name="${topping.name}" data-price="${topping.price}">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>
                `;
                category.insertAdjacentHTML("beforeend", itemHTML);
            } else {
                console.error(`‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà ${topping.type} ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏ó‡πá‡∏≠‡∏õ‡∏õ‡∏¥‡πâ‡∏á‡∏ô‡∏µ‡πâ`);
            }
        });
    })
    .catch(error => {
        console.error("‚ùå Error fetching toppings:", error);
        alert("‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏î‡∏∂‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡πá‡∏≠‡∏õ‡∏õ‡∏¥‡πâ‡∏á");
    });

    // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö checkbox
    const checkboxes = document.querySelectorAll(".topping-checkbox");
    if (checkboxes.length > 0) {
        checkboxes.forEach(checkbox => {
            checkbox.addEventListener("change", function () {
                let name = this.dataset.name;
                let price = parseFloat(this.dataset.price);

                if (this.checked) {
                    selectedToppings.push(name);
                    totalPrice += price;
                } else {
                    selectedToppings = selectedToppings.filter(item => item !== name);
                    totalPrice -= price;
                }
                updateCartDisplay();
            });
        });
    }
});

    </script>
    

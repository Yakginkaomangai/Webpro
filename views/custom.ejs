    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <style>
        body {
            padding-left: 50px;
        }
        
        /* ‡∏õ‡∏£‡∏±‡∏ö‡∏Ç‡∏ô‡∏≤‡∏î topping box */
        .topping-item {
            display: flex;
            align-items: center;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 12px;
            margin-bottom: 15px;
            background-color: white;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1); /* ‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏á‡∏≤ */
            transition: all 0.3s ease-in-out;
        }
        .topping-item:hover {
            transform: scale(1.02); /* ‡∏Ç‡∏¢‡∏≤‡∏¢‡πÄ‡∏•‡πá‡∏Å‡∏ô‡πâ‡∏≠‡∏¢‡πÄ‡∏°‡∏∑‡πà‡∏≠ hover */
            box-shadow: 3px 3px 12px rgba(0, 0, 0, 0.2);
        }
        .topping-item img {
            width: 90px;
            height: 90px;
            border-radius: 8px;
            margin-right: 15px;
        }
        .topping-item .details {
            flex-grow: 1;
        }
        .topping-item .quantity-controls {
            display: flex;
            align-items: center;
        }

    
        /* ‡∏õ‡∏£‡∏±‡∏ö UI ‡∏Ç‡∏≠‡∏á‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà (Meat, Vegetables, Sauces) */
        .category-box {
            background-color: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.08);
            margin-bottom: 25px;
        }
        .category-box h4 {
            font-size: 22px;
            font-weight: bold;
            color: #333;
            margin-bottom: 15px;
        }


        .cart-header {
            font-size: 18px;
            font-weight: bold;
            text-align: center;
            padding-bottom: 10px;
            border-bottom: 1px solid #ddd;
        }

    
        /* ‡∏õ‡∏∏‡πà‡∏°‡∏¢‡∏∑‡∏ô‡∏¢‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡∏™‡∏±‡πà‡∏á‡∏ã‡∏∑‡πâ‡∏≠ */
        #confirmOrder {
            width: 100%;
            font-size: 18px;
            font-weight: bold;
            padding: 12px;
            border-radius: 8px;
        }
        #confirmOrder:hover {
            background-color: #1E7E34;
        }

         /* Responsive */
        @media (max-width: 768px) {
            .cart-box {
                max-width: 100%;
                position: relative;
                margin-top: 20px;
            }

            .cart-items-container {
                max-height: 300px;
            }
            .menu-container {
                margin-top: 25px;
            }
        }
    </style>
    
</head>
<body id="custom-page">
    
    <%- include('partials/navbar') %>

        <div class="row mt-5 mb-5">
            <div class="col-lg-8">
                <h2>‡∏õ‡∏£‡∏±‡∏ö‡πÅ‡∏ï‡πà‡∏á‡πÅ‡∏ã‡∏ô‡∏ß‡∏¥‡∏ä‡πÉ‡∏ô‡πÅ‡∏ö‡∏ö‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì</h2>
                <img src="/img/promote.png" alt="Custom Sandwich" class="img-fluid rounded">
            </div>
        </div>

        <div class="row mt-5">
            <h3>‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ß‡∏±‡∏ï‡∏ñ‡∏∏‡∏î‡∏¥‡∏ö</h3>
            <div class="col-lg-8 mt-3">
                <!-- Bread Category -->
                <div class="category-box" data-category="bread">
                    <h4 class="mb-3">‡∏Ç‡∏ô‡∏°‡∏õ‡∏±‡∏á</h4>
                    <div class="row">
                        <% breads.forEach(breads => { %>
                        <div class="col-md-6 mb-3">
                            <div class="topping-item">
                                <img src="<%= breads.img %>">
                                <div class="details">
                                    <h5 class="mb-1"><%= breads.name %></h5>
                                    <p class="text-success fw-bold"><%= breads.price %> ‡∏ö‡∏≤‡∏ó</p>
                                </div>
                                <label class="checkbox-container">
                                    <input type="checkbox" class="topping-checkbox" data-name="<%= breads.name %>" data-price="<%= breads.price %>">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>

                <!-- Meat Category -->
                <div class="category-box" data-category="meat">
                    <h4 class="mb-3">‡πÄ‡∏ô‡∏∑‡πâ‡∏≠‡∏™‡∏±‡∏ï‡∏ß‡πå</h4>
                    <div class="row">
                        <% meats.forEach(meats => { %>
                        <div class="col-md-6 mb-3">
                            <div class="topping-item">
                                <img src="<%= meats.img %>">
                                <div class="details">
                                    <h5 class="mb-1"><%= meats.name %></h5>
                                    <p class="text-success fw-bold"><%= meats.price %> ‡∏ö‡∏≤‡∏ó</p>
                                </div>
                                <label class="checkbox-container">
                                    <input type="checkbox" class="topping-checkbox" data-name="<%= meats.name %>" data-price="<%= meats.price %>">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>

                <!-- Vegetables Category -->
                <div class="category-box" data-category="vegetable">
                    <h4 class="mb-3">‡∏ú‡∏±‡∏Å</h4>
                    <div class="row">
                        <% vegetables.forEach(vegetables => { %>
                        <div class="col-md-6 mb-3">
                            <div class="topping-item">
                                <img src="<%= vegetables.img %>">
                                <div class="details">
                                    <h5 class="mb-1"><%= vegetables.name %></h5>
                                    <p class="text-success fw-bold"><%= vegetables.price %> ‡∏ö‡∏≤‡∏ó</p>
                                </div>
                                <label class="checkbox-container">
                                    <input type="checkbox" class="topping-checkbox" data-name="<%= vegetables.name %>" data-price="<%= vegetables.price %>">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>

                <!-- Sauces Category -->
                <div class="category-box" data-category="sauce">
                    <h4 class="mb-3">‡∏ã‡∏≠‡∏™</h4>
                    <div class="row">
                        <% sauces.forEach(sauces => { %>
                        <div class="col-md-6 mb-3">
                            <div class="topping-item">
                                <img src="<%= sauces.img %>">
                                <div class="details">
                                    <h5 class="mb-1"><%= sauces.name %></h5>
                                    <p class="text-success fw-bold"><%= sauces.price %> ‡∏ö‡∏≤‡∏ó</p>
                                </div>
                                <label class="checkbox-container">
                                    <input type="checkbox" class="topping-checkbox" data-name="<%= sauces.name %>" data-price="<%= sauces.price %>">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <div class="text-left mt-4">
                <h2>‡∏ß‡∏±‡∏ï‡∏ñ‡∏∏‡∏î‡∏¥‡∏ö‡∏ó‡∏µ‡πà‡πÄ‡∏•‡∏∑‡∏≠‡∏Å:</h2>
                <h5 id="selected-toppings">‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏ß‡∏±‡∏ï‡∏ñ‡∏∏‡∏î‡∏¥‡∏ö‡∏ó‡∏µ‡πà‡πÄ‡∏•‡∏∑‡∏≠‡∏Å</h5>
                <h4>‡∏£‡∏≤‡∏Ñ‡∏≤‡∏£‡∏ß‡∏°: <span id="total-price">0 ‡∏ö‡∏≤‡∏ó</span></h4>
                <button id="addToCart" class="btn btn-primary">‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏•‡∏á‡∏ï‡∏∞‡∏Å‡∏£‡πâ‡∏≤</button>
            </div>
                      
            <%- include('partials/cart') %>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let selectedToppings = [];
            let totalPrice = 0;
        
            // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏Å‡∏≤‡∏£‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏•‡∏Ç‡∏≠‡∏á‡∏ï‡∏∞‡∏Å‡∏£‡πâ‡∏≤
            function updateCartDisplay() {
                const selectedToppingsElement = document.getElementById("selected-toppings");
                if (selectedToppingsElement) {
                    // ‡πÅ‡∏™‡∏î‡∏á‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ß‡∏±‡∏ï‡∏ñ‡∏∏‡∏î‡∏¥‡∏ö‡∏ó‡∏µ‡πà‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÉ‡∏ô‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö <ul> ‡πÅ‡∏•‡∏∞ <li>
                    if (selectedToppings.length > 0) {
                        selectedToppingsElement.innerHTML = "<ul>" + selectedToppings.map(item => 
                            `<li>${item.name} x 1</li>`
                        ).join("") + "</ul>";
                    } else {
                        selectedToppingsElement.innerHTML = "‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏ß‡∏±‡∏ï‡∏ñ‡∏∏‡∏î‡∏¥‡∏ö‡∏ó‡∏µ‡πà‡πÄ‡∏•‡∏∑‡∏≠‡∏Å";
                    }
                }
        
                const totalPriceElement = document.getElementById("total-price");
                if (totalPriceElement) {
                    totalPriceElement.textContent = totalPrice + " ‡∏ö‡∏≤‡∏ó";
                }
            }
        
            const checkboxes = document.querySelectorAll(".topping-checkbox");
            if (checkboxes.length > 0) {
                checkboxes.forEach(checkbox => {
                    checkbox.addEventListener("change", function () {
                        let name = this.dataset.name;
                        let price = parseFloat(this.dataset.price);
        
                        if (this.checked) {
                            selectedToppings.push({ name, price });
                            totalPrice += price;
                        } else {
                            selectedToppings = selectedToppings.filter(item => item.name !== name);
                            totalPrice -= price;
                        }
                        updateCartDisplay();
                    });
                });
            }
        
            // üõí ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡πÄ‡∏Ç‡πâ‡∏≤‡∏ï‡∏∞‡∏Å‡∏£‡πâ‡∏≤
            document.getElementById("addToCart").addEventListener("click", function () {
                if (selectedToppings.length === 0) {
                    alert("‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ó‡πá‡∏≠‡∏õ‡∏õ‡∏¥‡πâ‡∏á‡∏Å‡πà‡∏≠‡∏ô‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏•‡∏á‡∏ï‡∏∞‡∏Å‡∏£‡πâ‡∏≤!");
                    return;
                }
        
                // ‡∏™‡πà‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏õ‡∏¢‡∏±‡∏á‡πÄ‡∏ã‡∏¥‡∏£‡πå‡∏ü‡πÄ‡∏ß‡∏≠‡∏£‡πå
                fetch("/cart/add", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({
                        product_id: "999", // ‡∏´‡∏£‡∏∑‡∏≠‡πÉ‡∏ä‡πâ ID ‡∏à‡∏£‡∏¥‡∏á‡∏Ç‡∏≠‡∏á‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤
                        product_name: "Custom Sandwich",
                        price: totalPrice,
                        quantity: 1,
                        toppings: selectedToppings
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.error) {
                        alert("‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: " + data.error);
                    } else {
                        alert(data.message);
        
                        // ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏Å‡∏≤‡∏£‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏•‡∏Ç‡∏≠‡∏á‡∏ï‡∏∞‡∏Å‡∏£‡πâ‡∏≤
                        selectedToppings = [];
                        totalPrice = 0;
                        checkboxes.forEach(checkbox => checkbox.checked = false);
                        fetchCart();
        
                        // ‡∏£‡∏µ‡πÄ‡∏ü‡∏£‡∏ä‡∏ï‡∏∞‡∏Å‡∏£‡πâ‡∏≤‡πÉ‡∏ô‡∏´‡∏ô‡πâ‡∏≤‡πÄ‡∏ß‡πá‡∏ö‡πÇ‡∏î‡∏¢‡πÑ‡∏°‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏£‡∏µ‡πÇ‡∏´‡∏•‡∏î‡∏´‡∏ô‡πâ‡∏≤
                        const cartItemsContainer = document.querySelector(".cart-items-container");
                        if (cartItemsContainer) {
                            cartItemsContainer.innerHTML += `<div class="cart-item">${data.message}</div>`;
                        }
                    }
                })
                .catch(error => console.error("Error:", error));
            });
        });
        
        
    </script>
    
    <%- include('partials/footer') %>

</body>
</html>